  export "PM_APP_AWS_DJANGO_CLOUDFRONT_DOMAIN=$(cat $env_dir/PM_APP_AWS_DJANGO_CLOUDFRONT_DOMAIN)"
fi

rm $build_dir/rev-manifest.json
rm $build_dir/version.json

puts_step "Waiting for static assets to be deployed"

